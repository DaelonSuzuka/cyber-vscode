{
	"name": "cyber",
	"displayName": "Cyber",
	"icon": "icon.png",
	"version": "0.0.4",
	"description": "Language support for the Cyber programming language",
	"repository": {
		"type": "git",
		"url": "https://github.com/daelonsuzuka/cyber-vscode"
	},
	"bugs": {
		"url": "https://github.com/daelonsuzuka/cyber-vscode/issues"
	},
	"license": "MIT",
	"author": "DaelonSuzuka",
	"publisher": "DaelonSuzuka",
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Programming Languages",
		"Linters",
		"Snippets",
		"Debuggers",
		"Other"
	],
	"activationEvents": [
	],
	"main": "./out/extension.js",
    "scripts": {
		"compile": "tsc -p ./",
		"lint": "tslint -p ./",
		"watch": "tsc -watch -p ./",
		"package": "vsce package",
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
	},
	"contributes": {
        "languages": [
			{
				"id": "cyber",
				"aliases": [
					"cyberlang",
					"cy"
				],
				"extensions": [
					".cy"
				],
				"configuration": "./configurations/cyber-configuration.json"
			}
		],
        "grammars": [
			{
				"language": "cyber",
				"scopeName": "source.cyber",
				"path": "./syntaxes/cyber.tmLanguage.json"
			}
		]
    },
	"devDependencies": {
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.68.0",
		"@types/ws": "^8.2.2",
		"esbuild": "^0.15.2",
		"tslint": "^5.20.1",
		"typescript": "^3.5.1",
		"vsce": "^2.10.0"
	},
	"dependencies": {
	}
}